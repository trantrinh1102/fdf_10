<% provide :title, t("static_page.signup") %>
<div class="row" id="signup">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="text-center panel-title">
          Edit <%= resource_name.to_s.humanize %></h2>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name,
          url: registration_path(resource_name),
          html: {method: :put}) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :name, :label => :name,
              required: true, autofocus: true  %>
            <%= f.input :email, required: true, autofocus: true %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
            <%= f.input :password, autocomplete: "off",
              hint: "leave it blank if you don't want to change it",
              required: false %>
            <%= f.input :password_confirmation, required: false %>
            <%= f.input :current_password,
              hint: "we need your current password to confirm your changes",
              required: true %>
            <%= f.label :phone %>
            <%= f.text_field :phone, class: "form-control" %>
            <%= f.label :gender %>
            <%= f.select :gender,[[t("user.gender.female"), true],
              [t("user.gender.male"), false]],
              prompt: t("user.gender.select"), required: true,
              placeholder: t("user.gender_holder"),
              class: "form-control" %>
            <%= f.input :avatar, class: "form-control" %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Update" %>
          </div>
        <% end %>
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>
