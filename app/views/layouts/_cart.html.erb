<div class="cart-item">
  <% @cart.items.each do |item| %>
    <li id="item-<%= item.product_id %>">
      <span class="item">
        <span class="item-left">
          <%= image_tag item.product.image.thumb %><br>
          <%= link_to item.product.name, item.product %>
        </span>
        <span class="item-left item-infor">
          <table class="table">
            <thead>
              <tr>
                <th><%= t ".quantity" %></th>
                <th><%= t ".price" %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><span><%= item.quantity %></span></td>
                <td><span>$<%= item.total_price %></span></td>
                <td>
                <%= link_to t(".sub"), edit_cart_path(item.product),
                  remote: true,
                  class: "pull-right btn btn-xs btn-primary" %>
                <%= link_to t(".add"), cart_path(item.product),
                  remote: true, method: "PUT",
                  class: "pull-right btn btn-xs btn-primary" %>
                </td>
              </tr>
            </tbody>
          </table>
        </span>
        <span class="item-right">
          <%= link_to t("delete"), cart_path(item.product_id),
            method: :delete, remote: true,
            class: "btn btn-xs btn-danger pull-right" %>
        </span>
      </span>
    </li>
  <% end %>
</div>
