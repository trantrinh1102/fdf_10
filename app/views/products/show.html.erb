<div class="container detail-product">
  <div class="row">
    <div class="col-md-5 ">
      <span class="image-product"><%= image_tag @product.image.url %></span>
      <div id="hintDiv"></div>
      <%= rating_for @product, "rate", enable_half: true, target: '#hintDiv',
        targetType: "hint", targetText: t("products.rate") %>
      <%= social_share_button_tag @product.name %>
      <div class="status-upload" id="comments">
        <p><%= t "comment.comment" %></p>
        <%= render "comments/form_comment", object: @product %>
        <div class="comments">
          <% if user_signed_in? %>
            <%= render @product.comments %>
            <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= t ".product" %></th>
            <th></th>
            <th class="text-center"><%= t ".price" %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="col-sm-8 col-md-6">
              <div class="media">
                <div class="media-body">
                  <h4 class="media-heading"><%= @product.name %></h4>
                  <span class="text-success">
                    <strong><%= t "products.status" %></strong></span>
                  <span class="text-success"><strong></strong></span>
                </div>
              </div>
            </td>
            <td></td>
            <td class="col-sm-3 col-md-3 text-center">
              <strong><%= @product.price %></strong></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td>
              <%= link_to cart_path(@product), remote: true,
                method: "PUT", class: "btn btn-success" do %>
                <span class="glyphicon glyphicon-shopping-cart"></span>
                <%= t "cart.btn_cart" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <span class="text-primary">
        <strong><%= t "product.description" %></strong></span>
      <%= @product.description %>
    </div>
  </div>
</div>
