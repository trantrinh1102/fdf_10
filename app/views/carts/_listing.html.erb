<div class="cart-item-show">
  <h3 class="col-md-offset-1 total-cart text-success">
    <b><%= t ".total" %>:</b>
      <%= number_to_currency @cart.total_price %></h3><hr>
  <% @cart.items.each do |item| %>
    <div class="col-md-4 col-md-offset-1">
      <%= image_tag item.product.image.url, class: "image-shop" %>
      <h4 class="media-heading">
        <%= link_to item.product.name, item.product %>
      </h4>
      <div class="media">
        <div class="media-body">
          <span class="text-success">
            <strong><%= t "products.status" %></strong></span>
          <span class="text-success"><strong></strong></span>
        </div>
      </div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= t ".quantity" %></th>
            <th class="text-center"><%= t ".price" %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="col-sm-2 col-md-2">
              <%= item.quantity %>
            </td>
            <td class="col-sm-3 col-md-3 text-center">
              <strong><%= number_to_currency item.total_price %></strong></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <span class="item-right">
                <%= link_to t("delete"), cart_path(item.product_id),
                  method: :delete, remote: true,
                    class: "btn btn-xs btn-danger pull-right" %>
              </span>
              <%= link_to t(".sub"), edit_cart_path(item.product), remote: true,
                class: "pull-right btn btn-xs btn-primary" %>
              <%= link_to t(".add"), cart_path(item.product), remote: true,
                method: "PUT", class: "pull-right btn btn-xs btn-primary" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
